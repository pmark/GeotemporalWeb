!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Myapp"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    %script{:src => "http://api.tiles.mapbox.com/mapbox.js/v0.6.6/mapbox.js"}
    %link{:href => "http://api.tiles.mapbox.com/mapbox.js/v0.6.6/mapbox.css", :rel => "stylesheet"}/
    = csrf_meta_tags
    = yield(:head)
    :css
      body { margin:0; padding:0; }
      #map { position:absolute; top:0; bottom:0; width:100%; }
  %body
    %header.navbar.navbar-fixed-top
      %nav.navbar-inner
        .container
          = render 'layouts/navigation'
    #main.fill_height{:role => "main"}
      .container-fluid.fill_height
        .content.fill_height
          .row-fluid.fill_height
            #sidebar.span3.content_box
              = render 'layouts/messages'
              = yield :sidebar
            .span9.content_box.height90
              = yield
          %footer
